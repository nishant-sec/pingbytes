---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
// Import the interface to fix type inference errors
import type { BreadcrumbItem } from '@/components/Breadcrumbs.astro'
import PostHead from '@/components/PostHead.astro'
import TOCHeader from '@/components/TOCHeader.astro'
import TOCSidebar from '@/components/TOCSidebar.astro'
import PostNavigation from '@/components/PostNavigation.astro'
import WikiFileTree from '@/components/WikiFileTree.astro'
import MobileSectionsHeader from '@/components/MobileSectionsHeader.astro'
import { Button } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { getAllWikiPosts, parseAuthors, getWikiTree, setActiveFlags, getAdjacentWikiPosts } from '@/lib/data-utils'
import { formatDate } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import SmartImage from '@/components/SmartImage.astro'
import { render } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

// 1. Fetch all wiki posts to generate routes
export async function getStaticPaths() {
  const posts = await getAllWikiPosts()
  return posts.map((post) => ({
    params: { id: post.id },
    props: post,
  }))
}

const post = Astro.props
const currentPostId = Astro.params.id
const pathSegments = currentPostId.split('/')
const rootFolderId = pathSegments[0] ?? ''

// Fetch and prepare the tree
const wikiTree = await getWikiTree(rootFolderId)
setActiveFlags(wikiTree, currentPostId)

// Render content and headings
const { Content, headings } = await render(post)

// Authors
const authors = await parseAuthors(post.data.authors ?? [])

const tocSections = [
  {
    type: 'parent' as const,
    title: 'Overview',
    headings: headings.map((h) => ({
      slug: h.slug,
      text: h.text,
      depth: h.depth,
    })),
  },
]

// Breadcrumbs
const allPosts = await getAllWikiPosts()

const breadcrumbItems: BreadcrumbItem[] = [
  { href: '/resources', label: 'Resources', icon: 'lucide:book-open' },
]

let currentPath = ''
pathSegments.forEach((segment, index) => {
  currentPath = currentPath ? `${currentPath}/${segment}` : segment
  const isLast = index === pathSegments.length - 1

  const segmentPost = allPosts.find((p) => p.id === currentPath)
  const segmentTitle =
    segmentPost?.data.title ||
    segment.charAt(0).toUpperCase() + segment.slice(1).replace(/-/g, ' ')

  breadcrumbItems.push({
    label: segmentTitle,
    href: !isLast && segmentPost ? `/resources/${currentPath}` : undefined,
    icon: isLast ? 'lucide:file-text' : undefined,
  })
})

// Navigation
const navigation = await getAdjacentWikiPosts(currentPostId, rootFolderId)
const nextNavLabel = navigation.nextSectionTitle
  ? `Next Section: ${navigation.nextSectionTitle}`
  : 'Next Note'
---

<Layout>
  <PostHead slot="head" post={post as unknown as CollectionEntry<'blog'>} />
  
  {wikiTree.length > 0 && (
    <MobileSectionsHeader slot="table-of-contents" tree={wikiTree} currentPostId={currentPostId} />
  )}
  {headings?.length > 0 && (
    <TOCHeader slot="table-of-contents" headings={headings} />
  )}

  <section
    class="grid grid-cols-[minmax(0px,1fr)_min(calc(var(--breakpoint-md)-2rem),100%)_minmax(0px,1fr)] gap-y-6"
  >
    
    <div class="col-start-2">
      <Breadcrumbs items={breadcrumbItems} />
    </div>
    <div class="col-start-2 flex flex-col gap-6">
      {post.data.image && (
        <SmartImage
          src={post.data.image}
          alt={post.data.title}
          width={1200}
          height={630}
          class="w-full rounded-lg object-cover"
          sizes="(min-width: 1280px) 1200px, (min-width: 1024px) 1000px, 100vw"
          loading="eager"
          decoding="async"
          fallbackSrc="/og-default.webp"
        />
      )}
    </div>

    <div class="col-start-1 row-start-2 hidden xl:block">
      <div
        id="resources-nav"
        class="sticky top-20 ml-auto mr-6 h-[calc(100vh-5rem)] max-w-[18rem] overflow-y-auto px-3"
      >
        <span class="mb-4 block px-2 text-lg font-medium">Sections</span>
        <ul class="flex flex-col gap-1">
          {wikiTree.map(node => (
            <WikiFileTree node={node} currentPostId={currentPostId} />
          ))}
        </ul>
      </div>
    </div>

    <div class="col-start-2 row-start-2 flex flex-col gap-y-6">
      <section class="text-left">
        <div class="flex flex-col gap-3">
          <h1 class="mb-2 scroll-mt-31 text-3xl leading-tight font-medium sm:text-4xl">
            {post.data.title}
          </h1>

          <div class="text-muted-foreground flex flex-wrap items-center gap-3 text-xs sm:text-sm">
            <div class="flex items-center gap-2">
              <SmartImage
                src="/about.avif"
                alt="Nishant Chavan"
                width={24}
                height={24}
                class="size-6 rounded-full"
                loading="lazy"
                decoding="async"
                sizes="24px"
                fallbackSrc="/about.avif"
              />
              <span class="text-foreground font-medium">Nishant Chavan</span>
            </div>
          </div>

        </div>
      </section>

      <article class="prose max-w-none">
        <Content />
      </article>

      <div
        id="toc-end-marker"
        class="h-px w-full opacity-0 pointer-events-none"
        aria-hidden="true"
      />

      <PostNavigation
        newerPost={navigation.newer}
        olderPost={navigation.older}
        previousLabel="Previous Note"
        nextLabel={nextNavLabel}
      />

    </div>

    {tocSections.length > 0 && (
      <div class="col-start-1 xl:col-start-3 row-start-2 hidden xl:block">
        <TOCSidebar
          sections={tocSections}
          currentPostId={currentPostId}
          basePath="/resources"
        />
      </div>
    )}

  </section>

  <Button
    variant="outline"
    size="icon"
    className="group fixed right-8 bottom-8 z-50 hidden" 
    id="scroll-to-top"
    title="Scroll to top"
  >
    <Icon name="lucide:arrow-up" class="mx-auto size-4 transition-all group-hover:-translate-y-0.5" />
  </Button>

  <script>
    document.addEventListener('astro:page-load', () => {
      const btn = document.getElementById('scroll-to-top')
      if (btn) {
        btn.addEventListener('click', () => window.scrollTo({ top: 0, behavior: 'smooth' }))
        window.addEventListener('scroll', () => {
          btn.classList.toggle('hidden', window.scrollY <= 300)
        })
      }

      const STORAGE_KEY = 'resources-sidebar-state'
      const folders = Array.from(document.querySelectorAll<HTMLDetailsElement>('.js-wiki-folder'))

      const loadState = () => {
        try {
          const raw = sessionStorage.getItem(STORAGE_KEY) || localStorage.getItem(STORAGE_KEY) || '{}'
          return JSON.parse(raw)
        } catch (e) {
          console.error('Error loading resources sidebar state:', e)
          return {}
        }
      }

      const saveState = (state: Record<string, boolean>) => {
        try {
          sessionStorage.setItem(STORAGE_KEY, JSON.stringify(state))
          localStorage.setItem(STORAGE_KEY, JSON.stringify(state))
        } catch (e) {
          console.error('Error saving resources sidebar state:', e)
        }
      }

      const applySavedState = () => {
        const savedState = loadState()
        folders.forEach((folder) => {
          const isSavedOpen = savedState[folder.id]
          const isActivePath = folder.dataset.active === 'true'
          if (isSavedOpen || isActivePath) {
            folder.open = true
          }
        })
      }

      const captureCurrentState = () => {
        const state: Record<string, boolean> = {}
        folders.forEach((folder) => {
          if (folder.open) state[folder.id] = true
        })
        saveState(state)
      }

      applySavedState()

      folders.forEach((folder) => {
        folder.addEventListener('toggle', () => {
          captureCurrentState()
        })
      })

      document.addEventListener('astro:before-swap', captureCurrentState)
    })
  </script>
</Layout>
