---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
// Import the interface to fix type inference errors
import type { BreadcrumbItem } from '@/components/Breadcrumbs.astro'
import PostHead from '@/components/PostHead.astro'
import TOCHeader from '@/components/TOCHeader.astro'
import TOCSidebar from '@/components/TOCSidebar.astro'
import WikiFileTree from '@/components/WikiFileTree.astro'
import MobileSectionsHeader from '@/components/MobileSectionsHeader.astro'
import { badgeVariants } from '@/components/ui/badge'
import { Button } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { getAllWikiPosts, parseAuthors, getWikiTree, setActiveFlags } from '@/lib/data-utils'
import { formatDate, getTagVariant, readingTime, calculateWordCountFromHtml } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import { render } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

// 1. Fetch all Wiki posts to generate routes
export async function getStaticPaths() {
  const posts = await getAllWikiPosts()
  return posts.map((post) => ({
    params: { id: post.id },
    props: post,
  }))
}

const post = Astro.props
const currentPostId = Astro.params.id
const pathSegments = currentPostId.split('/')
const rootFolderId = pathSegments[0] ?? ''

// Fetch and prepare the Wiki Tree
const wikiTree = await getWikiTree(rootFolderId)
setActiveFlags(wikiTree, currentPostId)

// 2. Render content and headings
const { Content, headings } = await render(post)

// 3. Handle Authors
const authors = await parseAuthors(post.data.authors ?? [])

// 4. Calculate Reading Time
const wordCount = calculateWordCountFromHtml(post.body || '')
const postReadingTime = readingTime(wordCount)

// 5. Generate Simple TOC
const tocSections = [
  {
    type: 'parent' as const,
    title: 'Overview',
    headings: headings.map((h) => ({
      slug: h.slug,
      text: h.text,
      depth: h.depth,
    })),
  },
]

// 6. Generate Dynamic Breadcrumbs
// This creates a trail like: Wiki > Folder > SubFolder > Current Page
const allPosts = await getAllWikiPosts()

// FIX: Explicitly type the array so TypeScript knows href/icon can be optional
const breadcrumbItems: BreadcrumbItem[] = [
  { href: '/wiki', label: 'Wiki', icon: 'lucide:book-open' }
]

let currentPath = ''
pathSegments.forEach((segment, index) => {
  currentPath = currentPath ? `${currentPath}/${segment}` : segment
  const isLast = index === pathSegments.length - 1
  
  // Find a post that matches this path to get the "correct" title
  const segmentPost = allPosts.find(p => p.id === currentPath)
  // If no post (just a folder), prettify the segment name
  const segmentTitle = segmentPost?.data.title || 
    segment.charAt(0).toUpperCase() + segment.slice(1).replace(/-/g, ' ')

  breadcrumbItems.push({
    label: segmentTitle,
    // Only link if it's not the last item and a page actually exists there
    href: (!isLast && segmentPost) ? `/wiki/${currentPath}` : undefined,
    icon: isLast ? 'lucide:file-text' : undefined
  })
})
---

<Layout>
  <PostHead slot="head" post={post as unknown as CollectionEntry<'blog'>} />
  
  {/* Sections + TOC in header slot (mobile) */}
  {wikiTree.length > 0 && (
    <MobileSectionsHeader slot="table-of-contents" tree={wikiTree} currentPostId={currentPostId} />
  )}
  {headings?.length > 0 && (
    <TOCHeader slot="table-of-contents" headings={headings} />
  )}

  <section
    class="grid grid-cols-[minmax(0px,1fr)_min(calc(var(--breakpoint-md)-2rem),100%)_minmax(0px,1fr)] gap-y-6"
  >
    
    {/* ROW 1: Top Metadata (Breadcrumbs & Image) */}
    <div class="col-start-1 col-end-2 xl:col-start-2 xl:col-end-3 flex flex-col gap-6">
      <Breadcrumbs items={breadcrumbItems} />

      {post.data.image && (
        <Image
          src={post.data.image}
          alt={post.data.title}
          width={1200}
          height={630}
          class="w-full rounded-lg object-cover"
        />
      )}
    </div>

    {/* ROW 2: Main Layout - Sidebars and Content aligned at the Heading */}
    
    {/* Left Sidebar (Wiki Tree) */}
    <div class="col-start-1 row-start-2 hidden xl:block">
      <div
        id="wiki-nav"
        class="sticky top-20 ml-auto mr-8 h-[calc(100vh-5rem)] max-w-md overflow-y-auto pr-4"
      >
        <span class="mb-4 block px-2 text-lg font-medium">Sections</span>
        <ul class="flex flex-col gap-1">
          {wikiTree.map(node => (
            <WikiFileTree node={node} currentPostId={currentPostId} />
          ))}
        </ul>
      </div>
    </div>

    {/* Center Column: Header and Article */}
    <div class="col-start-2 row-start-2 flex flex-col gap-y-6">
      {/* Post Header */}
      <section class="text-center">
        <div class="flex flex-col">
          <h1 class="mb-2 scroll-mt-31 text-3xl leading-tight font-medium sm:text-4xl">
            {post.data.title}
          </h1>

          <div class="text-muted-foreground divide-border mb-4 flex flex-col items-center justify-center divide-y text-xs sm:flex-row sm:flex-wrap sm:divide-x sm:divide-y-0 sm:text-sm">
            {authors.length > 0 && (
              <div class="flex w-full items-center justify-center gap-x-2 py-2 sm:w-fit sm:px-2 sm:py-0 first:sm:pl-0 last:sm:pr-0">
                {authors.map((author) => (
                  <div class="flex items-center gap-x-1.5">
                    <Image src={author.avatar} alt={author.name} width={20} height={20} class="rounded-full" />
                    <span>{author.name}</span>
                  </div>
                ))}
              </div>
            )}

            <div class="flex w-full items-center justify-center gap-2 py-2 sm:w-fit sm:px-2 sm:py-0 first:sm:pl-0 last:sm:pr-0">
              <span>{formatDate(post.data.date)}</span>
            </div>

            <div class="flex w-full items-center justify-center gap-2 py-2 sm:w-fit sm:px-2 sm:py-0 first:sm:pl-0 last:sm:pr-0">
              <span>{postReadingTime}</span>
            </div>
          </div>

          <div class="flex flex-wrap justify-center gap-2">
            {post.data.tags?.map((tag) => {
              const { variant, className } = getTagVariant(tag)
              return (
                <a href={`/tags/${tag}`} class={`${badgeVariants({ variant })} ${className || ''}`}>
                  <Icon name="lucide:hash" class="size-3" />
                  {tag}
                </a>
              )
            })}
          </div>
        </div>
      </section>

      {/* Main Content Area */}
      <article class="prose max-w-none">
        <Content />
      </article>

    </div>

    {/* Right Sidebar (Table of Contents) */}
    {tocSections.length > 0 && (
      <div class="col-start-1 xl:col-start-3 row-start-2 hidden xl:block">
        <TOCSidebar sections={tocSections} currentPostId={currentPostId} />
      </div>
    )}

  </section>

  <Button
    variant="outline"
    size="icon"
    className="group fixed right-8 bottom-8 z-50 hidden" 
    id="scroll-to-top"
    title="Scroll to top"
  >
    <Icon name="lucide:arrow-up" class="mx-auto size-4 transition-all group-hover:-translate-y-0.5" />
  </Button>

  <script>
    document.addEventListener('astro:page-load', () => {
      // 1. Scroll to top button logic
      const btn = document.getElementById('scroll-to-top')
      if (btn) {
        btn.addEventListener('click', () => window.scrollTo({ top: 0, behavior: 'smooth' }))
        window.addEventListener('scroll', () => {
          btn.classList.toggle('hidden', window.scrollY <= 300)
        })
      }

      // 2. Wiki Sidebar State Persistence
      const STORAGE_KEY = 'wiki-sidebar-state'
      const folders = Array.from(document.querySelectorAll<HTMLDetailsElement>('.js-wiki-folder'))

      const loadState = () => {
        try {
          const raw = sessionStorage.getItem(STORAGE_KEY) || localStorage.getItem(STORAGE_KEY) || '{}'
          return JSON.parse(raw)
        } catch (e) {
          console.error('Error loading wiki sidebar state:', e)
          return {}
        }
      }

      const saveState = (state: Record<string, boolean>) => {
        try {
          sessionStorage.setItem(STORAGE_KEY, JSON.stringify(state))
          localStorage.setItem(STORAGE_KEY, JSON.stringify(state))
        } catch (e) {
          console.error('Error saving wiki sidebar state:', e)
        }
      }

      const applySavedState = () => {
        const savedState = loadState()
        folders.forEach((folder) => {
          const isSavedOpen = savedState[folder.id]
          const isActivePath = folder.dataset.active === 'true'
          if (isSavedOpen || isActivePath) {
            folder.open = true
          }
        })
      }

      const captureCurrentState = () => {
        const state: Record<string, boolean> = {}
        folders.forEach((folder) => {
          if (folder.open) state[folder.id] = true
        })
        saveState(state)
      }

      applySavedState()

      folders.forEach((folder) => {
        folder.addEventListener('toggle', () => {
          captureCurrentState()
        })
      })

      document.addEventListener('astro:before-swap', captureCurrentState)
    })
  </script>
</Layout>
