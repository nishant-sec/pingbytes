---
import { getSubpostCount, isSubpost } from '@/lib/data-utils'
import { formatDate } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import type { CollectionEntry } from 'astro:content'
import { Image } from 'astro:assets'
import Link from './Link.astro'

interface Props {
  entry: CollectionEntry<'blog'>
}

const { entry } = Astro.props
const formattedDate = formatDate(entry.data.date)
const subpostCount = !isSubpost(entry.id) ? await getSubpostCount(entry.id) : 0
const fallbackImage = '/og-default.png'
---

<Link
  href={`/${entry.collection}/${entry.id}`}
  class="group block -mx-3 px-3 py-6 rounded-xl border border-transparent shadow-none transition-all duration-300 hover:-translate-y-0.5 hover:border-border/50 hover:bg-muted/40 hover:shadow-sm sm:mx-0"
>
  <div class="flex flex-row items-start gap-4 sm:items-stretch">
    <div class="flex flex-1 flex-col gap-3">
      <div class="space-y-2">
        <div class="flex items-start justify-start">
          <h3 class="flex-1 min-w-0 text-xl font-bold leading-tight text-foreground/90 transition-colors duration-300 group-hover:text-primary">
            {entry.data.title}
          </h3>
        </div>

        <p class="text-sm leading-relaxed text-muted-foreground/80 line-clamp-2">
          {entry.data.description}
        </p>
      </div>

      <div class="flex flex-wrap items-center gap-x-3 gap-y-2 text-[11px] font-medium text-muted-foreground/60">
        <time
          datetime={entry.data.date.toISOString()}
          class="flex items-center gap-1.5 uppercase tracking-wider"
        >
          <Icon name="lucide:calendar" class="size-3" />
          {formattedDate}
        </time>

        <span class="text-muted-foreground/20" aria-hidden="true">/</span>

        <span class="flex items-center gap-1.5" data-claps data-post-id={entry.id}>
          <span aria-hidden="true">üëè</span>
          <span class="tabular-nums" data-claps-count>0</span>
        </span>

        {
          subpostCount > 0 && (
            <>
              <span class="text-muted-foreground/20" aria-hidden="true">/</span>
              <span class="flex items-center gap-1.5">
                <Icon name="lucide:file-text" class="size-3" />
                {subpostCount} {subpostCount === 1 ? 'part' : 'parts'}
              </span>
            </>
          )
        }
      </div>
    </div>

    <figure
      class="relative w-20 h-[53px] overflow-hidden rounded-lg border border-border/60 bg-muted/40 sm:w-40 sm:h-[107px] sm:shrink-0"
    >
      {
        entry.data.image ? (
          <Image
            src={entry.data.image}
            alt={entry.data.title}
            width={160}
            height={107}
            class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.02]"
            loading="lazy"
            decoding="async"
          />
        ) : (
          <img
            src={fallbackImage}
            alt={entry.data.title}
            width={160}
            height={107}
            class="h-full w-full object-cover"
            loading="lazy"
            decoding="async"
          />
        )
      }
    </figure>
  </div>
</Link>

<script>
  if (typeof window !== 'undefined') {
    const loadClaps = () => {
      const elements = document.querySelectorAll('[data-claps]')
      elements.forEach(async (el) => {
        const postId = el.getAttribute('data-post-id')
        const countEl = el.querySelector('[data-claps-count]')
        if (!postId || !countEl) return
        try {
          const res = await fetch(`/api/reactions/${postId}`)
          if (!res.ok) throw new Error('Request failed')
          const data = await res.json()
          const count = data?.reactions?.clap ?? 0
          countEl.textContent = count.toString()
        } catch (error) {
          countEl.textContent = '0'
        }
      })
    }

    if (document.readyState === 'complete' || document.readyState === 'interactive') {
      loadClaps()
    } else {
      window.addEventListener('DOMContentLoaded', loadClaps, { once: true })
    }
  }
</script>
