---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'
import { cn } from '@/lib/utils'

interface Props {
  src?: ImageMetadata | string
  alt: string
  width: number
  height: number
  class?: string
  sizes?: string
  loading?: 'lazy' | 'eager'
  decoding?: 'async' | 'auto' | 'sync'
  fallbackSrc?: string
}

const {
  src,
  alt,
  width,
  height,
  class: className,
  sizes,
  loading = 'lazy',
  decoding = 'async',
  fallbackSrc = '/og-default.png',
} = Astro.props

const canUseAstroImage = src && typeof src === 'object' && 'src' in src
const imgSrc = src ?? fallbackSrc
const mergedClass = cn('smart-image', className)
---

{canUseAstroImage ? (
  <Image
    src={imgSrc as ImageMetadata}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    decoding={decoding}
    sizes={sizes}
    class={mergedClass}
    data-loaded="false"
    onload="this.dataset.loaded='true'"
  />
) : (
  <img
    src={imgSrc as string}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    decoding={decoding}
    class={mergedClass}
    data-loaded="false"
    onload="this.dataset.loaded='true'"
  />
)}

<style>
  .smart-image {
    filter: blur(16px);
    transform: scale(1.02);
    opacity: 0.6;
    transition: filter 320ms ease, transform 320ms ease, opacity 320ms ease;
    will-change: filter, transform, opacity;
  }

  .smart-image[data-loaded='true'] {
    filter: blur(0);
    transform: scale(1);
    opacity: 1;
  }
</style>
